<h2>Awesome! Let's set up your family account.</h2>

<%= form_for @account, html: {class: "form new_account"} do |f| %>

<% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% @account.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

		<%= f.fields_for :users do |a| %>
		<div class="form-group">
		  <div class="control-label"><%= a.label :name, "My full name" %></div>
		  <div class="controls"><%= a.text_field :name, autofocus: true %></div>
		</div>

		<div class="form-group">
		  <div class="control-label"><%= a.label :email, "My email address" %>
			<p class="help-block">(This will be my username)</p></div>
		  <div class="controls"><%= a.email_field :email %></div>
		</div>

		<div class="form-group">
		  <div class="control-label">
				<%= a.label :password %>
				<p class="help-block"><% if @validatable %>
		    <em>(<%= @minimum_password_length %> characters minimum)</em>
		    <% end %></p>
			</div>
		  <div class="controls"><%= a.password_field :password, autocomplete: "off" %></div>
		</div>

		<div class="form-group">
		  <div class="control-label"><%= a.label :password_confirmation %></div>
		  <div class="controls"><%= a.password_field :password_confirmation, autocomplete: "off" %></div>
		</div>
		
	<% end %>	
		
  <div class="form-group">
    <div class="control-label"><%= f.label :name, "My family account name" %></div>
		<p class="help-block">(e.g. "The Smiths", or "The Super Coopers")</p>
    <div class="controls"><%= f.text_field :name, autofocus: true %></div>
  </div>

  <div class="actions">
    <%= f.submit "Take me to my dashboard", class: "btn" %>
  </div>
<% end %>


