<h2>My personal information </h2>

<%= form_for(@user, html: { method: :put, class: "form" }) do |f| %>

  <div class="form-group">
    <div class="control-label"><%= f.label :name, "My full name" %></div>
    <div class="controls"><%= f.text_field :name %></div>
  </div>

  <div class="form-group">
    <div class="control-label"><%= f.label :email, "My email address" %></div>
    <div class="controls"><%= f.email_field :email %></div>
  </div>

	<div class="form-group">
    <div class="control-label"><%= link_to "I want to update my password.", edit_user_registration_path %></div>
  </div>

	<div class="form-group">
		<%= link_to "Link to my Facebook account", user_omniauth_authorize_path(:facebook) %>
	</div>	

  <div class="form-group">
    <%= f.submit "Update", class: "btn" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(@user), class: "btn", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
