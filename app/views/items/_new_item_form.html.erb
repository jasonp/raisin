
	<%= form_for @item, url: account_project_list_items_path(@project.account, @project, @list), method: :post, remote: true, html: {class: "form-inline"} do |f| %>
		<%= f.hidden_field :status, value: "active" %>
		<%= f.hidden_field :created_by, value: current_user.id %>
		<%= f.hidden_field :flep, value: rand(1000001..9999999) %>

<div class="row new_list_item_form_row">
			<div class="form-group col-sm-8">
			  <%= f.text_field :title, class: "form-control input-sm", id: "todo_item_input", autofocus: true, placeholder: "Add a to-do item" %>
			</div>	
</div>
<div class="row new_list_item_form_row">				
			<div class="form-group col-sm-2">
				<%= f.select :user_id, options_for_select(@assignees, @item.user_id), {}, :class => "input-sm form-control assign_user_select" %>
			</div>		
			
			<div class="form-group col-sm-2">
				<div class="input-group date_picker_field" id="new_item_date_field" >
					<%= f.text_field :due, class: "form-control input-sm", id: "todo_due_date_input" %>
					<span class="input-group-addon">
						<span class="fa fa-calendar"></i>
					</span>
				</div>
			</div>
	
			<div class="form-group">
				<%= f.submit "Add", class: "btn btn-raisin-green right1em btn-sm" %> or <%= link_to "Cancel", account_project_list_cancel_item_path(@project.account, @project, @list), :remote => true %>
			</div>
			
			<div class="new_list_item_cancel_link">
				
			</div>
	<% end %>
	
	</div>
</div>

