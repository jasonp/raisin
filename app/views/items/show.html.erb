<h3><%= @project.title %></h3>
<span class="invite_new_collaborator_link">
	<%= link_to "Go to the project page", account_project_path(@project.account, @project) %><br />
	<%= link_to "Go to the list page", account_project_list_path(@project.account, @project, @list) %>
</span>
<div class="completed_page_top">
</div>


<div class="item_page_show_todo" id="list_item_actionable_box-<%= @li.id %>">
	
	<%= render 'list_item_individual' %>
	
</div>


<section class="comments_section row">
<div class="col-md-7">	
	
	<h5 class="comments_section_header">
		Have a conversation about this to-do:
	</h5>
	<div id="comments_list">
		<% @existing_comments.each do |ec| %>
			<% if ec.user %>
				<div id="account_comment-<%= ec.id %>">
					<%= render partial: '/comments/comment_content', locals: {ec: ec} %>
				</div>
			<% end %>	
		<% end %>
	</div>	
	
	<div id="new_comment_form">
		<%= render partial: '/comments/new_comment_form' %>
	</div>
	
</div>	
</section>	

