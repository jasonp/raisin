<div id="list_item_actionable-<%= @li.id %>">
	<%= form_for @li, url: account_project_list_item_path(@project.account, @project, @list, @li), method: :put, remote: true, html: {class: "form-inline"} do |f| %>
	<div class="checkbox">
		<% id_string = "list_item" + @li.id.to_s %>
		<% checked_status = true if @li.status == "checked" %>
		<label>
		<%= check_box_tag :item, "checked", checked_status, id: id_string, class: "submittable", data: {checked: @li.id} %>

	  	<%= @li.title %>
			<%= @li.user.name if @li.user %>
			<%= @li.due.to_date.to_formatted_s(:long) if @li.due %>

		</label>
	</div>
	<% end %>
</div>