<div class="row">
<div class="new_project_page_box col-md-8 col-md-offset-2">
	
	<%= form_for @project, url: account_projects_path(@account, @project) , html: {class: "form new_project"} do |f| %>

	<% if @project.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this account from being saved:</h2>

	      <ul>
	        <% @account.errors.full_messages.each do |msg| %>
	            <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	<% end %>

		<div class="form-group">
		  <div class="controls"><%= f.text_field :title, autofocus: true, class: "form-control input-lg", placeholder: "Title The New Project" %></div>
		</div>

		<div class="form-group">
		  <div class="controls"><%= f.text_area :description, class: "form-control", rows: 4, placeholder: "(Optional) A short project description" %></div>
		</div>
		
		<%= f.hidden_field :status, value: "active" %>

		<div class="form-group">

			<div class="checkbox">
				<label>
				<%= check_box_tag :family_share, "family_share", false %>
			  	Automatically add all family members as collaborators.
				</label>
			</div>	
			

		</div>


	  <div class="form-group">
			<div class="controls">
	    <%= f.submit "Create a new project", class: "btn btn-default" %>
			<span class="cancel_new_project">Or <%= link_to "nevermind, cancel...", root_path %></span>
			</div>

	  </div>


	<% end %>

</div>
</div>


